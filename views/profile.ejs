<%- include('partials/header') -%>

  <h1 class="text-4xl mb-4">Profile for <%= user.nickname %></h1>

  <div class="row">
    <div class="col-sm-6">
      <form method="post" action="/user/update">
        <div class="form-group">
          <label for="firstName">First Name</label>
          <input id="firstName" name="firstName" type="text" class="form-control" placeholder="Enter first name here" value="<%= userData['smbc.demo0/first_name'] %>">
        </div>
        <div class="form-group">
          <label for="lastName">Last Name</label>
          <input id="lastName" name="lastName" type="text" class="form-control" placeholder="Enter last name here" value="<%= userData['smbc.demo0/last_name'] %>">
        </div>
        <div class="form-group">
          <label for="phoneNumber">Phone Number</label>
          <input id="phoneNumber" name="phoneNumber" type="tel" class="form-control" placeholder="Enter phone number here" value="<%= userData['smbc.demo0/phone_number'] %>">
        </div>
        <div class="col-auto">
          <button type="submit" class="btn btn-outline-success">Update Profile</button>
        </div>
      </form>
    </div>
    <div class="col-sm-6">
      <h3>Update your password</h3>
      <form method="post" action="/user/password" oninput='confirmPassword.setCustomValidity(confirmPassword.value != password.value ? "Passwords do not match." : "")'>
        <div class="form-group mb-3 row">
          <label for="password" class="col-sm-2 col-form-label">New Password</label>
          <div class="col-sm-10">
            <input required type="password" class="form-control" id="password" name="password">
          </div>
        </div>
        <div class="form-group mb-3 row">
          <label for="confirmPassword" class="col-sm-2 col-form-label">Confirm Password</label>
          <div class="col-sm-10">
            <input required type="password" class="form-control" id="confirmPassword" name="confirmPassword">
          </div>
        </div>
        <div class="col-auto">
          <button type="submit" class="btn btn-outline-success">Change Password</button>
        </div>
      </form>
      <div class="mt-4 col-auto">
        <a href="/authenticators" class="btn btn-primary" role="button">Manage MFA</a>
      </div>        
    </div>
  </div>
  
  <p class="mt-3 py-3">
    Here is an example of the user information made available for this app as read from the ID token.<br>
  </p>
  <pre class="block bg-dark p-4 text-light overflow-scroll"><%= userProfile %></pre>
  
<%- include('partials/footer') -%>
